{
  "name": "@nl/ui",
  "version": "0.0.0",
  "license": "GPL-3.0-only",
  "type": "module",
  "private": true,
  "exports": {
    "./base/*": "./src/components/base/*.tsx",
    "./custom/*": "./src/components/custom/*/index.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./fonts": "./src/lib/fonts/index.ts",
    "./gtm": "./src/lib/gtm/index.tsx",
    "./utils": "./src/lib/utils.ts",
    "./postcss.config": "./postcss.config.mjs",
    "./styles.css": "./src/styles/globals.css"
  },
  "scripts": {
    "add-component": "pnpm dlx shadcn@latest add $@",
    "postadd-component": "pnpm migrate && pnpm format",
    "clean": "rm -rf node_modules && rm -rf .turbo && rm -rf .storybook",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,mdx,json}\" --ignore-path ../../.gitignore",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "migrate": "pnpm dlx shadcn@latest migrate radix -y",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.0.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "next-themes": "^0.4.6",
    "radix-ui": "latest",
    "react-hook-form": "^7.68.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@storybook/react": "^10.1.4",
    "@storybook/react-vite": "^10.1.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "storybook": "^10.1.4",
    "tailwindcss": "^4.1.17"
  },
  "peerDependencies": {
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  }
}
