{
  "name": "@nl/ui",
  "version": "0.0.0",
  "license": "GPL-3.0-only",
  "type": "module",
  "private": true,
  "exports": {
    "./base/*": "./src/components/base/*.tsx",
    "./custom/*": "./src/components/custom/*/index.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./fonts": "./src/lib/fonts/index.ts",
    "./gtm": "./src/lib/gtm/index.tsx",
    "./utils": "./src/lib/utils.ts",
    "./postcss.config": "./postcss.config.mjs",
    "./styles.css": "./src/styles/globals.css"
  },
  "scripts": {
    "add-component": "pnpm dlx shadcn@latest add $@",
    "clean": "rm -rf node_modules && rm -rf .turbo && rm -rf .storybook",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,mdx,json}\"",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "migrate": "pnpm dlx shadcn@latest migrate radix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@next/third-parties": "^15.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.535.0",
    "next-themes": "^0.4.6",
    "radix-ui": "latest",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@storybook/react": "^9.1.0",
    "@storybook/react-vite": "^9.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.1.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "storybook": "^9.1.0",
    "tailwindcss": "^4.1.11"
  },
  "peerDependencies": {
    "next": "15.4.5",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  }
}
