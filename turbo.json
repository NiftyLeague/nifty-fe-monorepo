{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["apps/**/.env.*local", ".env"],
  "globalEnv": [
    "PLAYFAB_API_KEY",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "APPLE_CLIENT_ID",
    "APPLE_CLIENT_SECRET",
    "FACEBOOK_CLIENT_ID",
    "FACEBOOK_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "TWITCH_CLIENT_ID",
    "TWITCH_CLIENT_SECRET"
  ],
  "tasks": {
    "build": { "dependsOn": ["^build"], "inputs": ["$TURBO_DEFAULT$", ".env*"], "outputs": ["dist/**"] },
    "app#build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_RUNTIME", "NEXT_PUBLIC_*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "docs#build": {
      "dependsOn": ["^build"],
      "env": ["ALGOLIA_API_KEY", "ALGOLIA_APP_ID"],
      "outputs": ["build/**", ".docusaurus/**"]
    },
    "smashers#build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_RUNTIME", "NEXT_PUBLIC_*", "NEXTAUTH_SECRET"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_RUNTIME", "NEXT_PUBLIC_*", "EDGE_CONFIG"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "clean": { "cache": false },
    "lint": { "dependsOn": ["^lint"], "env": ["NEXT_PUBLIC_VERCEL_ENV"] },
    "lint:fix": { "dependsOn": ["^lint:fix"], "env": ["NEXT_PUBLIC_VERCEL_ENV"] },
    "format": { "dependsOn": ["^format"] },
    "type-check": { "dependsOn": ["^type-check"] },
    "test": { "dependsOn": ["^test", "lint:fix", "format", "type-check"], "inputs": ["$TURBO_DEFAULT$", ".env*"] },
    "dev": { "cache": false, "persistent": true, "inputs": ["$TURBO_DEFAULT$", ".env*"] }
  }
}
