    "sync-node-versions": "pnpm exec .sh/sync-node-versions.sh",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@nl/eslint-config": "workspace:*",
    "@nl/prettier-config": "workspace:*",
    "@nl/typescript-config": "workspace:*",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.4",
    "typescript": "~5.8.3"
  },
  "pnpm": {
    "overrides": {
      "bnc-sdk>crypto-es": "^2.1.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react-dom": "19.1.6",
        "@types/react": "19.1.8",
        "crypto-es": "^2.1.0",
        "eslint": "^9.30.1",
        "multiformats": "13.3.6",
        "react-dom": "^19.1.0",
        "react": "^19.1.0",
