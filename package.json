{
  "name": "nifty-fe-monorepo",
  "version": "1.0.0",
  "license": "GPL-3.0-only",
  "private": true,
  "scripts": {
    "act-ci": "act --container-architecture linux/amd64 -P ubuntu-latest=-self-hosted -s GITHUB_TOKEN --var-file .env.act --secret-file .env.act -W '.github/workflows/ci.yml'",
    "add-ui": "pnpm --filter ui add-component $@",
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "turbo format",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "migrate-ui": "pnpm --filter ui migrate",
    "prepare": "husky && pnpm symlinks",
    "symlinks": "pnpm exec .sh/symlinks.sh",
    "sync-node-versions": "pnpm exec .sh/sync-node-versions.sh",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@nl/eslint-config": "workspace:*",
    "@nl/prettier-config": "workspace:*",
    "@nl/typescript-config": "workspace:*",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semver": "^7.7.3",
    "syncpack": "^13.0.4",
    "turbo": "^2.6.3",
    "typescript": "~5.8.3"
  },
  "pnpm": {
    "overrides": {
      "bnc-sdk>crypto-es": "^2.1.0",
      "zod": "^4.0.14"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react-dom": "19.2.3",
        "@types/react": "19.2.7",
        "cross-fetch": "4",
        "crypto-es": "^2.1.0",
        "lit": "3.3.1",
        "next": "16.0.7",
        "react-dom": "^19.2.1",
        "react": "^19.2.1",
        "three": "0.181.2"
      }
    },
    "onlyBuiltDependencies": [
      "@axelar-network/axelarjs-sdk",
      "@opensea/seaport-js",
      "@prisma/engines",
      "@reown/appkit",
      "@sentry/cli",
      "@swc/core",
      "@tailwindcss/oxide",
      "bufferutil",
      "core-js",
      "core-js-pure",
      "esbuild",
      "keccak",
      "prisma",
      "protobufjs",
      "sharp",
      "unrs-resolver",
      "utf-8-validate"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
