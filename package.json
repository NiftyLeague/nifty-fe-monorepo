      "core-js-pure",
      "esbuild",
      "keccak",
      "prisma",
      "protobufjs",
      "sharp",
      "utf-8-validate"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
