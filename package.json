{
  "name": "nifty-fe-monorepo",
  "version": "1.0.0",
  "license": "GPL-3.0-only",
  "private": true,
  "scripts": {
    "act-ci": "act --container-architecture linux/amd64 -P ubuntu-latest=-self-hosted -s GITHUB_TOKEN --var-file .env.act --secret-file .env.act -W '.github/workflows/ci.yml'",
    "add-ui": "pnpm --filter ui add-component $@",
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "turbo format",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "migrate-ui": "pnpm --filter ui migrate",
    "prepare": "husky && pnpm symlinks",
    "symlinks": "pnpm exec .sh/symlinks.sh",
    "sync-node-versions": "pnpm exec .sh/sync-node-versions.sh",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@nl/eslint-config": "workspace:*",
    "@nl/prettier-config": "workspace:*",
    "@nl/typescript-config": "workspace:*",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.5",
    "typescript": "~5.8.3"
  },
  "pnpm": {
    "overrides": {
      "bnc-sdk>crypto-es": "^2.1.0",
      "zod": "^4.0.14"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react-dom": "19.1.7",
        "@types/react": "19.1.9",
        "crypto-es": "^2.1.0",
        "lit": "3.3.1",
        "react-dom": "^19.1.1",
        "react": "^19.1.1",
        "three": "0.178.0"
      }
    },
    "onlyBuiltDependencies": [
      "@axelar-network/axelarjs-sdk",
      "@opensea/seaport-js",
      "@prisma/engines",
      "@reown/appkit",
      "@sentry/cli",
      "@swc/core",
      "@tailwindcss/oxide",
      "bufferutil",
      "core-js",
      "core-js-pure",
      "esbuild",
      "keccak",
      "prisma",
      "protobufjs",
      "sharp",
      "utf-8-validate"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
